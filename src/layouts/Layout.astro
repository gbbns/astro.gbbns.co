---
import Header from '../components/Header.astro'
import Colophon from '../components/Colophon.astro'
import Footer from '../components/Footer.astro'
import '../styles/main.scss'
import { siteMetaData } from '../data/siteMetaData.mjs'
export interface Props {
  title: string
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
// Example: Construct a URL for SEO meta tags using your current domain

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={siteMetaData.siteDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="preload"
      href="/fonts/Mona-Sans.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="o-content">
      <Header />
      <Colophon />
      <section class="o-content__body">
        <slot />
      </section>
      <Footer />
    </main>
  </body>
</html>
